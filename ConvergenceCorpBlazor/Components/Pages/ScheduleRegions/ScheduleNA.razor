<script>
    var times = document.getElementsByClassName("NAtime");
    for(var time of times){
        time.innerText = new Date(time.innerText).toLocaleTimeString([], {
            hour:'numeric',
            minute:'2-digit'
        });
    }
    var curtime = document.getElementById("NACurTime");
    curtime.innerText = new Date(curtime.innerText).toLocaleTimeString([],{
        hour:'numeric',
        minute:'2-digit',
        timeZoneName:'short'
    });
</script>
