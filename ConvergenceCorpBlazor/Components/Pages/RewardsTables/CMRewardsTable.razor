@using ConvergenceCorpBlazor.Classes.Model.Rewards;

@code {
    [Parameter]
    public int tableNumber { get; set; } = 0;
}

<table>
    <tr>
        <th>Item Name</th>
        <th>&lt;20 min Gold</th>
        <th>&lt;25 min Silver</th>
        <th>&lt;30 min Bronze</th>
        <th>Note</th>
    </tr>
    @foreach (RewardRow y in ConvergenceCorpBlazor.Classes.Model.Rewards.RewardsList.getTableRows(tableNumber))
    {
        <tr>
            <td>
                <div class="NameColumn">
                    <a href="@y.getWikiURL()" target="_blank">
                        @if (y.IconURL.Length > 0)
                        {
                            <image src="@y.IconURL" style="width:25px;" alt="@y.Name Icon" />
                        }
                        @y.Name
                    </a>
                </div>
            </td>
            
            <td> @if (y.Gold > 0) { @y.Gold } </td>
            <td> @if (y.Silver > 0) { @y.Silver } </td>
            <td> @if (y.Bronze > 0) { @y.Bronze } </td>
            <td> @y.Note </td>
        </tr>
        }
</table>